<section class="page-section">
  <div class="container py-7">
 <div class="page-header mb-4">
      <h1 class="text-white fw-bold mb-2">Sign Up</h1>
    </div>

    <div class="row g-5">
          <div class="col-lg-13">
        <div class="content-panel p-4 p-md-5">
          <h3 class="text-white fw-semibold mb-3">Details</h3>

           <form action="/contact" method="POST">
            <div class="row g-3">
              <div class="col-md-6">
                <label class="form-label text-white-50">Full Name</label>
                <input type="text" name="name" class="form-control search-input" placeholder="Your name" required>
              </div>

              <div class="col-md-6">
                <label class="form-label text-white-50">Email</label>
                <input type="email" name="email" class="form-control search-input" placeholder="you@example.com" required>
              </div>

              <div class="col-12">
                <label class="form-label text-white-50">Password</label>
                <input type="password" name="userPassword" class="form-control search-input" placeholder="Enter Password" value="" pattern=".{6,}" title="Password must be 6 or more characters long" required>
              </div>

              <div class="col-12">
              <label>
                    <input type="checkbox" checked name="remember"> Remember me
                </label>
              </div>

              <div class="col-12 d-grid">
                <button type="submit" class="btn primary-button">Sign Up</button>
              </div>
            </div>
          </form>
    </div>
    </div>
</section>

<script src="/js/signup.js"></script>
<script src="/js/login.js"></script>